{
  "name": "software-project-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Tooling baseline for FRD-driven implementation.",
  "engines": {
    "node": "22.11.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc --noEmit -p tsconfig.json",
    "test": "npm run test:unit",
    "test:unit": "vitest run --passWithNoTests",
    "test:integration": "vitest run --passWithNoTests --dir tests/integration",
    "test:e2e": "playwright test --pass-with-no-tests",
    "validate:schema": "ajv validate -c ajv-formats --spec=draft2020 --strict=true -s specs/frds/frd-schema.json -d \"specs/frds/frd-[0-9][0-9][0-9]-*.json\"",
    "dev": "vite",
    "build:app": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "ajv-cli": "5.0.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.0"
  }
}
